<% if @users.blank? %>
  <h1> There are no users in the system (Join as a User)</h1>
<% else %>
  <h1> List of the current users </h1>
  <ul id = 'users'>
    <% @users.each do |user| %>
      
      <li clsss = 'user-item'>
      <%= link_to user_path(user) do %>
        <div class = 'img-container'>
          <img src="<%= user.photo %>" alt="Description of your image">
        </div>
        <div class = 'title-container'>
          <h2> <%= user.name -%> </h2>
          <p> Number of posts: <%= user.postsCounter -%> <p>
        </div>
      <% end %>
      </li>
    <% end %>
  </ul>
<% end %>